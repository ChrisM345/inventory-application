<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="header">
      <h1><%= title %></h1>
      <ul>
        <li><a href="/trainer/createTrainer">Create a New Trainer</a></li>
        <li><a href="/">Return to Home</a></li>
      </ul>
    </div>
    <div class="trainerCardContainer">
      <% trainerData.forEach((trainer) => { %>
      <div class="trainerContainer">
        <h2><%= trainer.name %></h2>
        <form action="/trainer/<%= trainer.id %>/edit" method="get">
          <input type="submit" value="Edit" />
        </form>
        <form action="/trainer/<%= trainer.id %>/delete" method="post">
          <input type="submit" value="Delete" onclick="return confirm('Are you sure? - Delete <%= trainer.name%>')" />
        </form>
        <div class="trainerCards">
          <div class="trainerCard">
            <h3><%= trainer.pokemon1 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon1url%>" />
            <form action="pokemon/<%= trainer.pokemon1%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
          <div class="trainerCard">
            <h3><%= trainer.pokemon2 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon2url%>" />
            <form action="pokemon/<%= trainer.pokemon2%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
          <div class="trainerCard">
            <h3><%= trainer.pokemon3 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon3url%>" />
            <form action="pokemon/<%= trainer.pokemon3%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
          <div class="trainerCard">
            <h3><%= trainer.pokemon4 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon4url%>" />
            <form action="pokemon/<%= trainer.pokemon4%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
          <div class="trainerCard">
            <h3><%= trainer.pokemon5 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon5url%>" />
            <form action="pokemon/<%= trainer.pokemon5%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
          <div class="trainerCard">
            <h3><%= trainer.pokemon6 %></h3>
            <img class="trainerPokemonImage" src="<%=trainer.pokemon6url%>" />
            <form action="pokemon/<%= trainer.pokemon6%>" method="get">
              <input type="submit" value="Details" />
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
